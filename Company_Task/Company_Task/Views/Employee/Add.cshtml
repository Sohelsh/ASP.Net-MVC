@using Company_Task.ViewModel
@model EmployeeViewModel
@{
    ViewData["Title"] = "All employees";
}
<div class="p-4 container">
    <div class="row p-4">
        <div class="col-md-12">
            <h3>Add new employee</h3>
        </div>
    </div>
    <div class="row p-4">
        <div class="col-md-6">
            <form asp-controller="Employee" asp-action="Add" method="post">
                <div class="mb-3">
                    <label for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="MiddleName" class="form-label fw-bold">Middle Name</label>
                    <input  asp-for="MiddleName" type="text" class="form-control">
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label fw-bold">Last Name</label>
                    <input  asp-for="LastName"  type="text" class="form-control">
                     <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input  asp-for="PhoneNumber" type="number" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label>Country</label>
                    <select asp-for="Country" class="form-control" id="Country">
                        <option>--Select Country--</option>
                        <option>--Select State--</option>
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="mb-3 form-group">
                    <label>State</label>
                    <select asp-for="State" class="form-control" id="State">
                        <option>--Select State--</option>
                        <option>--Select State--</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3 form-group">
                    <label>City</label>
                    <select asp-for="City" class="form-control" id="City">
                        <option>--Select City--</option>
                        <option>--Select State--</option>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </select>                  
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label fw-bold">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                     <span asp-validation-for="Address" class="text-danger"></span>
                </div>
               @*  <div class="mb-3">
                    <label for="PostalCode" class="form-label fw-bold">Postal Code</label>
                    <input  asp-for="PostalCode"  type="number" class="form-control">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div> *@
                <div class="mb-3">
                    <label for="Location" class="form-label fw-bold">Location</label>
                    <input  asp-for="Location"  type="text" class="form-control">
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="datetimepicker" class="form-label fw-bold">Date</label>
                    <input asp-for="CreatedDate" type="date" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>                         

                <button type="submit" class="btn btn-dark">Submit</button>

            </form>
        </div>
    </div>
</div>
<a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/caseade.js"></script>